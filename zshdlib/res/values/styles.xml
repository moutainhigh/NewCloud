<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.

    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.

        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="select_tv">
        <item name="android:layout_width">@dimen/vote_select_lenght</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/bottom_btn_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/selector_vote_select_switch</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="bottom_btn">
        <item name="android:layout_width">@dimen/bottom_btn_length</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/bottom_btn_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_vote_btn_commit</item>
    </style>

    <style name="title_bar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">62dp</item>
    </style>

    <style name="title_back">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">15dp</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">#000000</item>
    </style>
</resources>