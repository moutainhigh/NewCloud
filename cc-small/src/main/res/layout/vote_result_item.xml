<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp">

    <ImageView
        android:id="@+id/id_vote_result_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"/>

    <ProgressBar
        android:id="@+id/id_vote_result_item_pb"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="105dp"
        android:layout_height="13dp"
        android:max="100"
        android:layout_centerVertical="true"
        android:layout_marginEnd="7dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/id_vote_result_item_icon"
        android:progressDrawable="@drawable/layer_list_progress_drawable"/>

    <TextView
        android:id="@+id/id_vote_result_item_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/id_vote_result_item_pb"
        android:gravity="center"/>


</RelativeLayout>