<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/item_height">

    <TextView
        android:id="@+id/id_lianmai_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/item_margin_start"
        android:textSize="@dimen/item_tip_size"
        android:textColor="@color/colorItemTip"/>

    <ImageView
        android:id="@+id/id_choose_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/item_margin_end"
        android:src="@drawable/choose_icon"/>

</RelativeLayout>