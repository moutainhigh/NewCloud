<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@id/id_popup_window_outside_view"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#80000000">

    <LinearLayout
        android:id="@id/id_popup_window_anim_view"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#FAFAFA">

        <TextView
            android:id="@+id/id_choose_tip"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:gravity="center"
            android:textColor="#969696"
            android:visibility="gone"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line"
            android:background="@color/colorItemLine"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/id_choose_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorItemNormal"
            android:overScrollMode="never"
            android:scrollbars="none"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line"
            android:background="@color/colorItemLine"
            android:layout_marginBottom="10dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line"
            android:background="@color/colorItemLine"/>

        <TextView
            android:id="@+id/id_choose_cancel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height"
            android:background="@drawable/item_selected"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/popup_cancel_txt"
            android:textColor="@color/colorItemTip"
            android:textSize="@dimen/item_tip_size"/>

    </LinearLayout>

</RelativeLayout>