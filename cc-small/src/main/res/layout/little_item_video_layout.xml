<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="81dp"
                android:layout_height="143.3dp"
                android:background="#00000000">

    <RelativeLayout
        android:id="@+id/id_little_video_item_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/video_item_box"
        android:paddingEnd="0.8dp"/>

    <RelativeLayout
        android:id="@+id/id_little_video_item_other_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/other_box"
        android:paddingBottom="0.5dp"
        android:paddingEnd="1dp"
        android:paddingStart="0.5dp"
        android:paddingTop="0.5dp"
        android:visibility="visible">

        <ImageView
            android:id="@+id/id_little_video_item_other_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/camera_close_bg"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/id_little_video_one_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:layout_marginStart="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/id_little_video_one_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:maxLines="1"
            android:maxWidth="75dp"
            android:shadowColor="#30000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:singleLine="true"
            android:textColor="#ffffff"
            android:textSize="12sp"/>

        <ImageView
            android:id="@+id/id_little_video_one_item_mic_close"
            android:layout_width="9dp"
            android:layout_height="9dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5dp"
            android:src="@drawable/mic_close_icon"/>

        <ImageView
            android:id="@+id/id_little_video_one_item_video_draw"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5dp"
            android:src="@drawable/video_draw_icon"
            android:visibility="visible"/>
        <ImageView
            android:id="@+id/id_little_video_one_item_video_setup_theacher"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5dp"
            android:src="@drawable/setup_teacher_normal"
            android:visibility="visible"/>

        <ImageView
            android:id="@+id/id_little_video_one_item_video_lock"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5dp"
            android:src="@drawable/video_item_lock_icon"
            android:visibility="visible"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/id_little_video_oper"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_alignParentBottom="true"
        android:background="#80000000">

        <TextView
            android:id="@+id/id_little_video_item_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="4dp"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:maxLines="1"
            android:maxWidth="75dp"
            android:shadowColor="#30000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:singleLine="true"
            android:text="aa"
            android:textColor="#ffffff"
            android:textSize="11sp"/>

        <ImageView
            android:id="@+id/id_little_video_item_mic"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="4dp"
            android:src="@drawable/mic_open_icon"/>

        <ImageView
            android:id="@+id/id_little_video_item_draw"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/id_little_video_item_mic"
            android:layout_marginEnd="4dp"
            android:src="@drawable/video_draw_icon"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/id_little_video_item_setup_theacher"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/id_little_video_item_draw"
            android:layout_marginEnd="4dp"
            android:src="@drawable/setup_teacher_normal"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/id_little_video_item_lock"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/id_little_video_item_draw"
            android:layout_marginEnd="4dp"
            android:src="@drawable/video_item_lock_icon"
            android:visibility="gone"/>

    </RelativeLayout>

</RelativeLayout>