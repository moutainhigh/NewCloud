<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_15"
    android:paddingRight="@dimen/dp_15"
    android:paddingBottom="@dimen/dp_5"
    android:paddingTop="@dimen/dp_12">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:text="@string/course_intro"
        android:textColor="@color/color_3"
        android:textSize="@dimen/sp_15" />


    <com.seition.cloud.pro.newcloud.widget.ExpandableTextView
        android:id="@+id/course_intro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:DrawableAndTextGravity="right"
        app:collapseDrawable="@drawable/ic_triangle_up"
        app:contentTextColor="@color/color_3"
        app:expandCollapseTextColor="@color/color_3"
        app:expandDrawable="@drawable/ic_triangle_down"
        app:maxCollapsedLines="4" />
