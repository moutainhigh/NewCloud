<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="20dp"
    android:paddingRight="10dp"
    android:paddingTop="13.5dp"
    android:paddingBottom="15.5dp">
    
	<TextView
	    android:id="@+id/action_type"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textSize="15sp"
	    android:textColor="@color/color_3"/>


	<TextView
	    android:id="@+id/transaction_time"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textSize="12sp"
	    android:textColor="#c3c3c3"
		android:text="2018"
	    android:layout_alignParentRight="true"
	    android:layout_alignBaseline="@id/action_type"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/action_type"
		android:layout_marginTop="6dp"
		>


		<TextView
			android:id="@+id/transaction_title"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:layout_height="wrap_content"
			android:layout_below="@id/action_type"
			android:text=""
			android:textSize="13sp"
			android:textColor="@color/color_3"/>
		<TextView
			android:id="@+id/transaction_price"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:gravity="bottom"
			android:layout_below="@id/time"
			android:text=""
			android:textSize="@dimen/sp_15"
			android:textColor="#429e6d"
			android:layout_alignParentRight="true"
	/>
	</LinearLayout>
</RelativeLayout>
