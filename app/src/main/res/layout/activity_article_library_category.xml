<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/default_background"
    android:orientation="vertical"
    tools:context=".home.mvp.ui.more.library.activity.ArticleLibraryCategoryActivity">

    <include layout="@layout/include_common_title" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/category_list"
            android:layout_width="@dimen/dp_100"
            android:layout_height="match_parent"
            android:background="@color/color_f3f4f6"
            android:divider="@null"
            android:scrollbars="none" />

        <LinearLayout
            android:id="@+id/mall_category_fragemtn_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical" />
    </LinearLayout>

</LinearLayout>