<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_border_member_type"
        android:layout_marginTop="@dimen/dp_15"
        android:padding="@dimen/dp_6"
        android:orientation="vertical">


        <TextView
            android:id="@+id/member_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_gravity="center_horizontal"
            android:maxEms="6"
            android:maxLines="1"
            android:text="青铜会员"
            android:textStyle="bold"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/color_3"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/member_month_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="0"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/color_f65549"
                />
            <TextView
                android:id="@+id/member_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="元/月"
                android:textSize="@dimen/sp_10"
                android:textColor="@color/color_65"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="3.5dp"
            android:layout_marginBottom="@dimen/dp_10"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/member_year_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="0"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/color_f65549"
                />
            <TextView
                android:id="@+id/member_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="元/年"
                android:textSize="@dimen/sp_10"
                android:textColor="@color/color_65"
                />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/member_type_img"
        android:layout_width="@dimen/dp_45"
        android:layout_height="@dimen/dp_45"
        android:layout_centerHorizontal="true"
         />

</RelativeLayout>