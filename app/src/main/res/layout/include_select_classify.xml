<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/select_classify"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_45"
    android:background="@color/white"
    android:orientation="horizontal"
    android:visibility="gone">

    <LinearLayout
        android:id="@+id/left_item"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/left_item_text"
            style="@style/select_classify_text_style" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/center_item"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/center_item_text"
            style="@style/select_classify_text_style" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/right_item"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/right_item_text"
            style="@style/select_classify_text_style" />
    </LinearLayout>
</LinearLayout>