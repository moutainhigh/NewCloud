<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/default_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <com.seition.cloud.pro.newcloud.widget.ScrollViewCustom
        android:id="@+id/hor_list_custom2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fafafa"
        android:overScrollMode="always"
        android:scrollbars="none" />

    <com.seition.cloud.pro.newcloud.widget.ScrollViewCustom
        android:id="@+id/hor_list_custom3"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:background="#F0F0F2"
        android:overScrollMode="never"
        android:scrollbars="none" />
    <include layout="@layout/include_springview_recyclerview"/>


</LinearLayout>